{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "createNewVM": {
      "type": "string",
      "defaultValue": "false",
      "allowedValues": [
        "true",
        "false"
      ],
      "metadata": {
        "description": "Specifies if a new VM wtih default config is to be created."
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Specifies name of the VM where AzureSecurityLinuxAgent is to be installed."
      }
    },
    "vmImageName": {
      "type": "string",
      "defaultValue": "",
      "allowedValues": [
        "",
        "Ubuntu:18.04-LTS:latest"
      ],
      "metadata": {
        "description": "Specifies image for the VM. Can be left blank, if a new VM is not being created."
      }
    },
    "vmLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the VM."
      }
    },
    "vmAdminUsername": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Specifies a username for the VM. Can be left blank, if a new VM is not being created."
      }
    },
    "vmAdminPublicKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Specifies the SSH rsa public key file as a string. Use \"ssh-keygen -t rsa -b 2048\" to generate your SSH key pairs. Can be left blank, if a new VM is not being created."
      }
    },
    "createNewLAWorkspace": {
      "type": "string",
      "defaultValue": "false",
      "allowedValues": [
        "true",
        "false"
      ],
      "metadata": {
        "description": "Specifies if a new LA Workspace wtih default config is to be created."
      }
    },
    "laWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Specifies name of the LA Workspace where AzureSecurityLinuxAgent data is to be streamed."
      }
    },
    "laWorkspaceLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for LA Workspace."
      }
    }
  },
  "variables": {
    "vmImageTemplateURIs": {
      "Ubuntu:18.04-LTS:latest": "https://raw.githubusercontent.com/prash2611/OneAgentTemplates/master/azureDeployUbuntu18.04-LTSlatestVM.json"
    },
    "laWorkspaceTemplateURI": "https://raw.githubusercontent.com/prash2611/OneAgentTemplates/master/azureDeployLAWorkspace.json",
    "deployOneAgentToLATemplateURI": "https://raw.githubusercontent.com/prash2611/OneAgentTemplates/master/azureDeploySecurityLinuxAgent.json",
    "deployOneAgentToVMTemplateURI": "https://raw.githubusercontent.com/prash2611/OneAgentTemplates/master/azureDeploySecurityLinuxAgent.json"
  },
  "resources": [
    {
      "condition": "[equals(parameters('createNewVM'), 'true')]",
      "name": "DeployVM",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vmImageTemplateURIs')[parameters('vmImageName')]]"
        },
        "parameters": {
          "vmName": {
            "value": "[parameters('vmName')]"
          },
          "vmLocation": {
            "value": "[parameters('vmLocation')]"
          },
          "vmAdminUsername": {
            "value": "[parameters('vmAdminUsername')]"
          },
          "vmAdminPublicKey": {
            "value": "[parameters('vmAdminPublicKey')]"
          }
        }
      }
    },
    {
      "condition": "[equals(parameters('createNewLAWorkspace'), 'true')]",
      "name": "DeployLAWorkspace",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('laWorkspaceTemplateURI')]"
        },
        "parameters": {
          "laWorkspaceName": {
            "value": "[parameters('laWorkspaceName')]"
          },
          "laWorkspaceLocation": {
            "value": "[parameters('laWorkspaceLocation')]"
          }
        }
      }
    },
    {
      "name": "DeployOneAgentToLA",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('deployOneAgentToLATemplateURI')]"
        },
        "parameters": {
          "laWorkspaceName": {
            "value": "[parameters('laWorkspaceName')]"
          },
          "laWorkspaceLocation": {
            "value": "[parameters('laWorkspaceLocation')]"
          }
        }
      }
    },
    {
      "name": "DeployOneAgentToVM",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "DeployOneAgentToLA"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('securityLinuxAgentTemplateURI')]"
        },
        "parameters": {
          "vmName": {
            "value": "[parameters('vmName')]"
          },
          "vmLocation": {
            "value": "[parameters('vmLocation')]"
          },
          "dataCollectionRuleId": {
            "value": "[reference('DeployOneAgentToLA').outputs.dataCollectionRuleId.value]"
          }
        }
      }
    }
  ]
}